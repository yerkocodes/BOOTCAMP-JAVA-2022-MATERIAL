CREATE DATABASE IF NOT EXISTS pcfactory;

CREATE TABLE IF NOT EXISTS fabricante (
  codigo INTEGER,
  nombre VARCHAR(100),
  PRIMARY KEY(codigo)
);

CREATE TABLE IF NOT EXISTS producto (
  codigo INTEGER,
  nombre VARCHAR(100),
  precio DECIMAL(10,2),
  codigo_fabricante INTEGER,
  PRIMARY KEY(codigo),
  FOREIGN KEY(codigo_fabricante) REFERENCES fabricante(codigo)
);

